<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.dupat.dupatchat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".instance.DupatChat"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".actChat"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarLogin"
            tools:ignore="LockedOrientationActivity" ></activity>
        <activity
            android:name=".actSearchFriends"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarLogin"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actHome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarLogin"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actRegister"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".actLogin"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarLogin"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".service.onlineStatus"/>
        <service android:name=".service.FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>