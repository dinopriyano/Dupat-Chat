<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/swipeLayout"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/containerFriend"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="15dp"
            android:layout_height="70dp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnDeleteFriend"
                app:cardCornerRadius="25dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#C6C6C6"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/ic_trash"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">

        <com.loopeer.shadow.ShadowView
            android:layout_marginLeft="15dp"
            app:shadowRadius="1dp"
            app:cornerRadius="8dp"
            app:shadowMarginBottom="1dp"
            app:shadowMarginRight="1dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    app:cardBackgroundColor="#C6C6C6"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp">

                    <com.makeramen.roundedimageview.RoundedImageView
                        app:riv_corner_radius="25dp"
                        android:id="@+id/fotoUser"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:maxLines="1"
                        android:id="@+id/namaUser"
                        android:ellipsize="end"
                        android:layout_height="wrap_content"
                        android:text="Dino Priyano"
                        android:textStyle="bold"
                        android:textColor="#323131"
                        android:fontFamily="@font/notosans_regular"/>
                    <TextView
                        android:maxLines="1"
                        android:id="@+id/usernameUser"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dupatindonesia"
                        android:textColor="#323131"
                        android:fontFamily="@font/notosans_regular"/>

                </LinearLayout>



            </LinearLayout>

        </com.loopeer.shadow.ShadowView>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>